generator client {
    provider = "prisma-client-js"
    output   = "../src/generated/prisma"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model User {
    id        String   @id @default(cuid())
    email     String   @unique
    name      String?
    password  String?
    habits    Habit[]
    records   Record[]
    createdAt DateTime @default(now())
}

model Habit {
    id        String   @id @default(cuid())
    title     String
    user      User     @relation(fields: [userId], references: [id])
    userId    String
    createdAt DateTime @default(now())
}

model Record {
    id        String   @id @default(cuid())
    content   String
    user      User     @relation(fields: [userId], references: [id])
    userId    String
    createdAt DateTime @default(now())
}
